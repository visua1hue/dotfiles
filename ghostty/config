# General Adjustments:

shell-integration = zsh
copy-on-select = true
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2
window-save-state = always
window-colorspace = "display-p3"

theme = NvimDark
font-family = JetBrainsMono Nerd Font Mono
font-size = 22
cursor-style = block
cursor-color = #59f8f8
adjust-cursor-thickness = 10

macos-icon = custom-style
macos-icon-frame = plastic
macos-icon-ghost-color = #59f8f8
macos-icon-screen-color = #000000

# Keybindings: ghostty +list-keybinds --default

keybind = command+r=reload_config
keybind = command+backspace=esc:w
keybind = command+right=new_split:right
keybind = command+down=new_split:down
